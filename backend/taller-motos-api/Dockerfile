# Copiar archivos de Maven
COPY pom.xml .
COPY .mvn .mvn
COPY mvnw .

# Dar permisos de ejecuci贸n
RUN chmod +x mvnw

# Descargar dependencias
RUN ./mvnw dependency:go-offline -B

# Copiar c贸digo fuente
COPY src src

# Construir aplicaci贸n
RUN ./mvnw clean package -DskipTests

# Exponer puerto
